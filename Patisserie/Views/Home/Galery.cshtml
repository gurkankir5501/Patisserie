@model List<Patisserie.Models.Recipe>
    <h2 class="my-4 container">Galeri</h2>
    <section class=" mt-4 row">

        
        <div class="col-1"></div>
        <div class="col-10">
            <div class="row">
                @foreach (var item in Model)
                 {
                     String a = "Tarif"+item.Id+"1.jpg";

                    <div class="col-2 mt-2">
                        <article class="thumbnail thumbnail-mary " style="width:200px;height:200px">
                            <a class="thumbnail-mary-figure" href="/assets/images/@a" data-lightgallery="item"><img src="/assets/images/@a" alt="" style="width:200px;height:200px" /></a>
                            <div class="thumbnail-mary-caption">
                                <div>
                                    <h6 class="thumbnail-mary-title"><a href="/Recipe/Details/@item.Id">@item.RecipeName</a></h6>
                                    
                                </div>
                            </div>
                        </article>

                    </div>
                }





            </div>
        </div>

        


    </section>