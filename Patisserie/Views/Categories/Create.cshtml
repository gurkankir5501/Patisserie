@model Patisserie.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2 class="my-5">Kategori Ekle</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" >
        
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group " style="margin-top:100px">

            
            <div style="margin-left:400px" class="row">
                <div class="col-2">
                    @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label container" })
                </div>
                <div class="col-9">
                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control p-2 col-4" } })
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                </div>
                
            </div>
        </div>

            <div class="form-group" style="margin-bottom:101px;margin-left:350px">
                <div class="col-md-offset-2 col-md-10 mt-4">
                
                        @Html.ActionLink("Geri Dön", "Index",new { },new { @class="btn btn-primary btn-sm"})
                
                    <input type="submit" value="Create" class="btn btn-default btn-sm" />
                </div>
            </div>
    </div>
}


