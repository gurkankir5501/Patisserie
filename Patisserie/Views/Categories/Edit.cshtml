@model Patisserie.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2 class="my-4">Kategori Düzenle</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" style="margin-top:117px;margin-bottom:140px"> 
       
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">

            <div class="row">
                <div class="col-3"></div>
                <div class="col-md-2">

                    @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label" })

                </div>
                <div class="col-md-5">

                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control p-2 col-5" } })
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })

                </div>
            </div>
            
            
        </div>

        <div class="form-group" style="margin-left:450px">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Geri Dön", "Index",new { }, new { @class = "btn btn-primary btn-sm" })
                <input type="submit" value="Save" class="btn btn-default btn-sm" />
            </div>
        </div>
    </div>
}

