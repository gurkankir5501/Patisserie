@model Patisserie.Models.Slider

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2 class="my-5">Slider Ekle</h2>
<hr />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" style="margin-bottom:100px;margin-top:50px">
        
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            

            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-1">@Html.LabelFor(model => model.TitleText, htmlAttributes: new { @class = "control-label " })</div>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.TitleText, new { htmlAttributes = new { @class = "form-control p-2 col-4" } })
                    @Html.ValidationMessageFor(model => model.TitleText, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">

            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-1"> @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label" })</div>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control p-3 col-6" } })
                    @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

        <div class="form-group" style="margin-left:550px">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Geri Dön", "Index",new { },new { @class="btn btn-primary btn-sm"})
                <input type="submit" value="Ekle" class="btn btn-default btn-sm " />
            </div>
        </div>
    </div>
}


